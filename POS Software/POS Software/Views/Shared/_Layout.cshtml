<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS SOFTWARE</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            margin-bottom: 0;
            background-color: #3B8DBC;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: white;
            }

        .sidebar {
            position: fixed;
            top: 56px; /* Height of the navbar */
            bottom: 0;
            left: 0;
            width: 200px;
            background-color: #343a40;
            padding-top: 20px;
            z-index: 1000;
        }

            .sidebar a {
                color: white;
                padding: 15px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #575d63;
                }

        .submenu a {
            color: white;
            padding-left: 30px;
        }

            .submenu a:hover {
                background-color: #575d63;
            }

        .content {
            margin-top: 56px; /* Height of the navbar */
            margin-left: 200px; /* Width of the sidebar */
            padding: 20px;
        }

        .widget {
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 5px;
            color: white;
        }

        .widget-green {
            background-color: #28a745;
        }

        .widget-blue {
            background-color: #007bff;
        }

        .widget-gray {
            background-color: #6c757d;
        }

        .widget-orange {
            background-color: #fd7e14;
        }

        .widget-red {
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <a class="navbar-brand">POS Software</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">admin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar" id="accordionSidebar">
        <a asp-area="" asp-controller="Home" asp-action="Index">&#127968;Dashboard</a>
        <a asp-area="" asp-controller="Home" asp-action="newSale">&#10145;New Sale</a>
        <a href="#" data-toggle="collapse" data-target="#salesMenu" aria-expanded="true" aria-controls="salesMenu">&#128200;Sales</a>
        <div id="salesMenu" class="collapse submenu" aria-labelledby="headingSales" data-parent="#accordionSidebar">
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Create">New Sale</a>
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Index">Return Sale</a>
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Create">Sales History</a>
        </div>
        <a href="#" data-toggle="collapse" data-target="#purchasesMenu" aria-expanded="false" aria-controls="purchasesMenu">&#128722;Purchases</a>
        <div id="purchasesMenu" class="collapse submenu" aria-labelledby="headingPurchases" data-parent="#accordionSidebar">
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Create">New Purchase</a>
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Index">Return Purchase</a>
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Create">Purchase History</a>
        </div>
        <a href="#" data-toggle="collapse" data-target="#productsMenu" aria-expanded="false" aria-controls="productsMenu">&#128230;Products</a>
        <div id="productsMenu" class="collapse submenu" aria-labelledby="headingProducts" data-parent="#accordionSidebar">
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Create">New Product</a>
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Index">Product List</a>
        </div>
        <a href="#" data-toggle="collapse" data-target="#customersMenu" aria-expanded="false" aria-controls="customersMenu">&#128100;Customers</a>
        <div id="customersMenu" class="collapse submenu" aria-labelledby="headingCustomers" data-parent="#accordionSidebar">
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Create">New Customer</a>
            <a asp-area="" asp-controller="EmployeeTbs" asp-action="Index">Customer List</a>
        </div>
        <a href="#" data-toggle="collapse" data-target="#suppliersMenu" aria-expanded="false" aria-controls="suppliersMenu">&#128230;Suppliers</a>
        <div id="suppliersMenu" class="collapse submenu" aria-labelledby="headingSuppliers" data-parent="#accordionSidebar">
            <a asp-area="" asp-controller="Suppliers" asp-action="Create">New Supplier</a>
            <a asp-area="" asp-controller="Suppliers" asp-action="Index">Supplier List</a>
        </div>
        <a href="#">&#9881;Settings</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $('.collapse').on('show.bs.collapse', function () {
            $('.collapse.show').collapse('hide');
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

