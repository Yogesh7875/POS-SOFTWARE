@model POS_Software.Models.Supplier

@{
    ViewBag.Title = "Details";
}
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 0;
    }

    .form-horizontal {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: 50px auto;
        transition: box-shadow 0.3s ease;
    }

        .form-horizontal:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .form-horizontal h4 {
            color: #333;
            font-size: 28px;
            margin-bottom: 20px;
        }

    .control-label {
        font-weight: bold;
        margin-bottom: 5px;
        color: #555;
    }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #5bc0de;
            outline: none;
            box-shadow: 0 0 8px rgba(91, 192, 222, 0.3);
        }

    .text-danger {
        color: #d9534f;
    }

    .btn-default {
        background-color: #5bc0de;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 12px 24px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-default:hover {
            background-color: #31b0d5;
        }

    .form-group {
        margin-bottom: 25px;
    }

        .form-group div {
            padding: 0;
        }

    .col-md-offset-2 {
        margin-left: 0;
    }

    .col-md-2, .col-md-10 {
        padding: 0 15px;
    }

    .form-horizontal hr {
        margin: 20px 0;
        border: 0;
        border-top: 1px solid #eee;
    }

    .back-to-list {
        display: block;
        text-align: center;
        margin: 25px 0;
        color: #337ab7;
        text-decoration: none;
        font-size: 18px;
        transition: color 0.3s ease;
    }

        .back-to-list:hover {
            text-decoration: underline;
            color: #23527c;
        }

    media (max-width: 768px) {
        .form-horizontal

    {
        padding: 20px;
        margin: 20px;
    }

    .form-horizontal h4 {
        font-size: 24px;
    }

    .form-control {
        font-size: 14px;
        padding: 10px;
    }

    .btn-default {
        font-size: 16px;
        padding: 10px 20px;
    }

    .back-to-list {
        font-size: 16px;
    }
    }
</style>
<h2>Details</h2>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SupplierName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SupplierName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SupplierAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SupplierAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SupplierId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
